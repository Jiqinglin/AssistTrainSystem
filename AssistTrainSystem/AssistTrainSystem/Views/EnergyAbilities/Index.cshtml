@model AssistTrainSystem.Controllers.EnergyAbilitiesController.EnergyList
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LeftMenu.cshtml";
}
<script src="~/js/echarts.min.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

<div class="row">
    <div class="col-md-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">请输入测试参数</h3>
            </div>
            <div class="panel-body">
                <form asp-action="Create" id="formData">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" id="ID" name="ID" />
                    <input type="hidden" id="user_id" name="user_id" value="@User.Identity.Name">
                    <input type="hidden" id="type" name="type"/>
                    <div class="form-group">
                        <label id="horbara2" name="horbara2" class="control-label">单杠一练习(引体向上)</label>
                        <input id="horbara_num" name="horbara_num" class="form-control" />

                    </div>

                    <div class="form-group">
                        <label id="horbarb2" name="horbarb2" class="control-label">单杠二练习（卷身上）</label>
                        <input id="horbarb_num" name="horbarb_num" class="form-control" />

                    </div>

                    <div class="form-group">
                        <label id="doubara2" name="doubara2" class="control-label">双杠一练习（屈臂伸）</label>
                        <input id="doubara_num" name="doubara_num" class="form-control" />

                    </div>

                    <div class="form-group">
                        <label id="doubarb2" name="doubarb2" class="control-label">双杠二练习（摆动屈臂伸）</label>
                        <input id="doubarb_num" name="doubarb_num" class="form-control" />

                    </div>

                    <div class="form-group">
                        <label id="pushup2" name="pushup2" class="control-label">俯卧撑</label>
                        <input id="pushup_num" name="pushup_num" class="form-control" />

                    </div>

                    <div class="form-group">
                        <label id="situp2" name="situp2" class="control-label">仰卧起坐</label>
                        <input id="situp_num" name="situp_num" class="form-control" />

                    </div>

                    <div class="form-group">
                        <label id="age2" name="age2" class="control-label">年龄</label>
                        <input id="age" name="age" class="form-control" />

                    </div>

                    <div class="form-group" style="display:inline">
                        <input value="保存" onclick="fun()" class="btn btn-default" style="width:149px" />

                        <script type="text/javascript">
                            function fun() {
                                $("#type").val("yes");
                                var data = $("#formData").serialize();

                                $.post("/EnergyAbilities/Create", data, function (data) {

                                    myChart.setOption({

                                        series: [


                                            {
                                                name: '上一次测试',
                                                type: 'bar',
                                                label: seriesLabel,
                                                data: [@Model.lastlist.doubara_score, @Model.lastlist.pushup_score, @Model.lastlist.situp_score]
                                            },
                                            {
                                                name: '当前测试',
                                                type: 'bar',
                                                label: seriesLabel,
                                                data: [data.horbara, data.pushup, data.situp]
                                            }
                                        ]
                                    });

                                    myChart2.setOption({

                                        series: [


                                            {
                                                name: '上一次测试',
                                                type: 'bar',
                                                label: seriesLabel,
                                                data: [@Model.lastlist.horbarb_score, @Model.lastlist.doubara_score, @Model.lastlist.doubarb_score]
                                            },
                                            {
                                                name: '当前测试',
                                                type: 'bar',
                                                label: seriesLabel,
                                                data: [data.horbarb, data.doubara, data.doubarb]
                                            }
                                        ]

                                    });
                                });
                                    }



                        </script>

                        <input value="测试一下" onclick="fun2()" class="btn btn-default" style="width:149px" />
                        <script type="text/javascript">
                            function fun2() {
                                $("#type").val("no");
                                var data = $("#formData").serialize();

                                $.post("/EnergyAbilities/Create", data, function (data) {

                                    myChart.setOption({

                                        series: [


                                            {
                                                name: '上一次测试',
                                                type: 'bar',
                                                label: seriesLabel,
                                                data: [@Model.lastlist.doubara_score, @Model.lastlist.pushup_score, @Model.lastlist.situp_score]
                                            },
                                            {
                                                name: '当前测试',
                                                type: 'bar',
                                                label: seriesLabel,
                                                data: [data.horbara, data.pushup, data.situp]
                                            }
                                        ]
                                    });

                                    myChart2.setOption({

                                        series: [


                                            {
                                                name: '上一次测试',
                                                type: 'bar',
                                                label: seriesLabel,
                                                data: [@Model.lastlist.horbarb_score, @Model.lastlist.doubara_score, @Model.lastlist.doubarb_score]
                                            },
                                            {
                                                name: '当前测试',
                                                type: 'bar',
                                                label: seriesLabel,
                                                data: [data.horbarb, data.doubara, data.doubarb]
                                            }
                                        ]

                                    });
                                });
                                    }


                            
                        </script>
                    </div>

                    <div class="form-group">

                    </div>
                    <script type="text/javascript">

                    </script>
                    <div>
                        <p>系统建议：</p>
                        <div style="height:116px">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-10">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">测试结果</h3>
                    </div>
                    <div class="panel-body" style="display:inline">

                        <div class="row">

                            <div id="main" class="col-md-10" style="width: 460px;height:351px;"></div>
                            <div id="main3" class="col-md-10" style="width:460px;height:351px;"></div>
                        </div>
                        <script type="text/javascript">
                            var myChart = echarts.init(document.getElementById('main'));

                            var weatherIcons = {
                                '引体向上': './data/asset/img/weather/sunny_128.png',
                                '俯卧撑': './data/asset/img/weather/cloudy_128.png',
                                '仰卧起坐': './data/asset/img/weather/showers_128.png'
                            };

                            var seriesLabel = {
                                normal: {
                                    show: true,
                                    textBorderColor: '#333',
                                    textBorderWidth: 2
                                }
                            }

                            option = {
                                title: {

                                },
                                tooltip: {
                                    trigger: 'axis',
                                    axisPointer: {
                                        type: 'shadow'
                                    }
                                },
                                legend: {
                                    data: ['上一次测试','当前测试']
                                },
                                grid: {
                                    left: 100
                                },
                                toolbox: {
                                    show: true,
                                    feature: {
                                        saveAsImage: {}
                                    }
                                },
                                xAxis: {
                                    type: 'value',
                                    name: '分数',
                                    axisLabel: {
                                        formatter: '{value}'
                                    }
                                },
                                yAxis: {
                                    type: 'category',
                                    inverse: true,
                                    data: ['引体向上', '俯卧撑', '仰卧起坐'],
                                    axisLabel: {

                                        margin: 20,
                                        rich: {
                                            value: {
                                                lineHeight: 30,
                                                align: 'center'
                                            },
                                            Sunny: {
                                                height: 40,
                                                align: 'center',
                                                backgroundColor: {
                                                    image: weatherIcons.Sunny
                                                }
                                            },
                                            Cloudy: {
                                                height: 40,
                                                align: 'center',
                                                backgroundColor: {
                                                    image: weatherIcons.Cloudy
                                                }
                                            },
                                            Showers: {
                                                height: 40,
                                                align: 'center',
                                                backgroundColor: {
                                                    image: weatherIcons.Showers
                                                }
                                            }
                                        }
                                    }
                                },
                                series: [


                                    {
                                        name: '上一次测试',
                                        type: 'bar',
                                        label: seriesLabel,
                                        data: [@Model.lastlist.doubara_score, @Model.lastlist.pushup_score, @Model.lastlist.situp_score]
                                    },
                                    {
                                        name: '当前测试',
                                        type: 'bar',
                                        label: seriesLabel,
                                        data: []
                                    }
                                ]
                            };

                            myChart.setOption(option);




                            var myChart2 = echarts.init(document.getElementById('main3'));

                            var weatherIcons = {
                                '卷身上': './data/asset/img/weather/sunny_128.png',
                                '屈臂伸': './data/asset/img/weather/cloudy_128.png',
                                '摆动屈臂伸': './data/asset/img/weather/showers_128.png'
                            };

                            var seriesLabel = {
                                normal: {
                                    show: true,
                                    textBorderColor: '#333',
                                    textBorderWidth: 2
                                }
                            }

                            option = {
                                title: {

                                },
                                tooltip: {
                                    trigger: 'axis',
                                    axisPointer: {
                                        type: 'shadow'
                                    }
                                },
                                legend: {
                                    data: ['上一次测试', '当前测试']
                                },
                                grid: {
                                    left: 100
                                },
                                toolbox: {
                                    show: true,
                                    feature: {
                                        saveAsImage: {}
                                    }
                                },
                                xAxis: {
                                    type: 'value',
                                    name: '分数',
                                    axisLabel: {
                                        formatter: '{value}'
                                    }
                                },
                                yAxis: {
                                    type: 'category',
                                    inverse: true,
                                    data: ['卷身上', '屈臂伸', '摆臂屈臂伸'],
                                    axisLabel: {

                                        margin: 20,
                                        rich: {
                                            value: {
                                                lineHeight: 30,
                                                align: 'center'
                                            },
                                            Sunny: {
                                                height: 40,
                                                align: 'center',
                                                backgroundColor: {
                                                    image: weatherIcons.Sunny
                                                }
                                            },
                                            Cloudy: {
                                                height: 40,
                                                align: 'center',
                                                backgroundColor: {
                                                    image: weatherIcons.Cloudy
                                                }
                                            },
                                            Showers: {
                                                height: 40,
                                                align: 'center',
                                                backgroundColor: {
                                                    image: weatherIcons.Showers
                                                }
                                            }
                                        }
                                    }
                                },
                                series: [


                                    {
                                        name: '上一次测试',
                                        type: 'bar',
                                        label: seriesLabel,
                                        data: [@Model.lastlist.horbarb_score, @Model.lastlist.doubara_score, @Model.lastlist.doubarb_score]
                                    },
                                    {
                                        name: '当前测试',
                                        type: 'bar',
                                        label: seriesLabel,
                                        data: []
                                    }
                                ]
                            };

                            myChart2.setOption(option);


                        </script>

                    </div>
                </div>
            </div>


        </div>
    </div>
    <div class="col-md-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">您在今年的体质变化</h3>
            </div>
            <div class="panel-body">
                <div id="main2" style="width: 680px;height:350px;"></div>
                <script type="text/javascript">

                            var myChart3 = echarts.init(document.getElementById('main2'));

                            var time = new Array();
                            var score = new Array();

                            @foreach(var x in Model.list)
                             {
                                    <text>
                                            score.push('@x.score');
                                    </text>

                             }

                            @foreach(var x in Model.timelist)
                             {
                                    <text>
                                            time.push('@x');
                                    </text>

                             }
                            option = {
                                backgroundColor: '#212121',
                                color: ['#ffc94c'],
                                legend: {
                                    show: true,
                                    right: '6%',
                                    data: [{
                                        name: '销售数据',
                                        icon: 'circle',
                                        textStyle: {
                                            fontSize: '16',
                                            color: '#fff0c2'
                                        },
                                    }],
                                },
                                grid: {
                                    left: '6%',
                                    right: '7%',
                                    top: '18%',
                                    bottom: '6%',
                                    containLabel: true
                                },
                                textStyle: {
                                    fontSize: '14',
                                    fontWeight: 'normal',
                                    color: '#ffffff'
                                },
                                xAxis: {
                                    show: true,
                                    type: 'category',
                                    boundaryGap: false,
                                    data: time,
                                },
                                yAxis: {
                                    show: true,
                                    type: 'value',
                                    splitLine: {
                                        show: true,
                                        lineStyle: { // 属性lineStyle（详见lineStyle）控制线条样式
                                            color: 'rgba(255, 255, 255, 0.06)',
                                        }
                                    },
                                    axisLabel: {
                                        formatter: function (params) {
                                            if (params === 0) {
                                                return ''
                                            } else {
                                                return params
                                            }
                                        }
                                    }
                                },
                                series: [{
                                    name: '销售数据',
                                    type: 'line',
                                    smooth: true,
                                    showSymbol: false,
                                    itemStyle: {
                                        normal: {
                                            lineStyle: {
                                                color: '#ffc94c'
                                            }
                                        }
                                    },
                                    areaStyle: {
                                        normal: {
                                            color: {
                                                type: 'linear',
                                                x: 0,
                                                y: 0,
                                                x2: 0,
                                                y2: 1,
                                                colorStops: [{
                                                    offset: 0,
                                                    color: 'rgba(255, 225, 0, 0.2)',
                                                }, {
                                                    offset: 1,
                                                    color: 'rgba(255, 225, 0, 0)',
                                                }],
                                                globalCoord: false
                                            },
                                        }
                                    },
                                    markPoint: {
                                        data: [{
                                            type: 'max',
                                            label: {
                                                normal: {
                                                    show: true,
                                                    formatter: ''
                                                }
                                            },
                                            itemStyle: {
                                                normal: {
                                                    color: '#ffc94c',
                                                    borderColor: 'rgba(255, 201, 76, 0.3)',
                                                    borderWidth: 12, // 标注边线线宽，单位px，默认为1
                                                }
                                            },
                                            symbol: 'circle',
                                            symbolSize: 12,
                                        }],
                                    },
                                    data: score
                                }]
                            };

                            myChart3.setOption(option);

                </script>
            </div>
        </div>
    </div>

</div>
