@model AssistTrainSystem.Controllers.HomeController.TrainAbility
<script src="~/js/echarts.min.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<h3>可视化数据</h3>

<hr>
<div class="panel-body">
    <div id="main" style="width: 100%;height:600px;"></div>
    <script type="text/javascript">

        var myChart = echarts.init(document.getElementById('main'));



        var time = new Array();

        var fourhurdle = new Array();

        var fiveoffroad = new Array();

        var comtrain = new Array();

           @foreach(var x in Model.timelist)
                                {
                                    <text>
                                        time.push('@x');
                                    </text>

                                }

                                        @foreach(var x in Model.fourhurdle)
                                {
                                    <text>
                                        fourhurdle.push('@x.fourhurdle_score');
                                    </text>

                                }

                                        @foreach(var x in Model.fiveoffroad)
                                {
                                    <text>
                                        fiveoffroad.push('@x.fiveoffroad_score');
                                    </text>

                                }


                                        @foreach(var x in Model.comtrain)
                                {
                                    <text>
                                        comtrain.push('@x.score');
                                    </text>

                                }

        option = {
            tooltip: {
                trigger: 'axis',
                formatter: function (params, ticket, callback) {

                    var res = params[0].name;

                    for (var i = 0, l = params.length; i < l; i++) {
                        if (params[i].seriesType === 'line') {
                            res += '<br/>' + params[i].seriesName + ' : ' + (params[i].value ? params[i].value : '-') + 'h';
                        } else {
                            res += '<br/>' + params[i].seriesName + ' : ' + (params[i].value ? params[i].value : '-') + '个';
                        }
                    }
                    return res;

                }
            },
            grid: {
                containLabel: true
            },
            legend: {
                data: ['400米障碍', '五公里武装越野', '综合应用训练']
            },
            xAxis: [{
                type: 'category',
                axisTick: {
                    alignWithLabel: true
                },
                data: time
            }],
            dataZoom: [{
                type: 'slider',
                xAxisIndex: 0,
                filterMode: 'empty',
                start: 0,
                end: 100
            }, {
                type: 'slider',
                yAxisIndex: 0,
                filterMode: 'empty',
                start: 0,
                end: 100
            }, {
                type: 'inside',
                xAxisIndex: 0,
                filterMode: 'empty',
                start: 0,
                end: 100
            }, {
                type: 'inside',
                yAxisIndex: 0,
                filterMode: 'empty',
                start: 0,
                end: 100
            }],
            yAxis: [{
                type: 'value',
                name: '综合评分',
                min: 0,
                position: 'left',
                axisLabel: {
                    formatter: '{value} h'
                }
            }, {
                type: 'value',
                name: '综合评分',
                min: 0,
                position: 'right',
                axisLabel: {
                    formatter: '{value} 个'
                }
            }],
            series: [{
                name: '400米障碍',
                type: 'line',
                label: {
                    normal: {
                        show: true,
                        position: 'top',
                    }
                },
                lineStyle: {
                    normal: {
                        width: 3,
                        shadowColor: 'rgba(0,0,0,0.4)',
                        shadowBlur: 10,
                        shadowOffsetY: 10
                    }
                },
                data: fourhurdle
            }, {
                name: '五公里武装越野',
                type: 'bar',
                yAxisIndex: 1,
                label: {
                    normal: {
                        show: true,
                        position: 'top'
                    }
                },
                data: fiveoffroad
            }, {
                name: '综合应用训练',
                type: 'bar',
                yAxisIndex: 1,
                label: {
                    normal: {
                        show: true,
                        position: 'top'
                    }
                },
                data: comtrain
            }]
        };

        myChart.setOption(option);


    </script>
</div>

<div class="row">
    <div class="col-md-12">

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">400米障碍成绩预测</h3>
            </div>
            <div class="panel-body" style="height:200px">
                您的400米障碍 预测成绩：<font size="3">@Model.four</font> 分数
          
            </div>
        </div>

    </div>

    <div class="col-md-12">

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">五公里武装越野成绩预测</h3>
            </div>
            <div class="panel-body" style="height:200px">
                您的五公里武装越野预测成绩：<font size="3">@Model.five</font> 分数

            </div>
        </div>

    </div>

    <div class="col-md-12">

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">综合应用训练成绩</h3>
            </div>
            <div class="panel-body" style="height:200px">
                您的携枪100米障碍预测成绩：<font size="3">@Model.gunhurdle</font> 分数
                您的三公里越野预测成绩：<font size="3">@Model.threeoffroad</font> 分数
                您的300米障碍预测成绩：<font size="3">@Model.threehurdle</font> 分数
                您的200米障碍预测成绩：<font size="3">@Model.twohurdle</font> 分数

            </div>
        </div>

    </div>

    
</div>
